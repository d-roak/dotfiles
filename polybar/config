modules-left = i3
modules-center = spotify
modules-right = alsa wlan eth date battery
module-margin-right = 5


[module/spotify]
type = custom/script
interval = 1
exec = playerctl metadata -f '{{artist}} - {{title}}'
format = <label>
format-prefix = "  "
format-foreground = ${colors.spotify}


[module/i3]
